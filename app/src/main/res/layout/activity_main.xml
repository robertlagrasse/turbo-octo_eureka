<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context="com.umpquariversoftware.metronome.UI.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="normal"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/floatingActionButton"
            android:layout_weight="1" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:id="@+id/tempoBar"
            android:layout_weight="5"
            android:max="300" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/patternContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/colorAccent">

        <include layout="@layout/pattern_chooser"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/kitContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorAccent">

        <include layout="@layout/kit_chooser"
            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/controlPanelContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"

        android:background="@color/colorAccent">
        <include layout="@layout/control_panel"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/BillboardContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorAccent">
        <include layout="@layout/billboard"/>
    </FrameLayout>


</LinearLayout>
